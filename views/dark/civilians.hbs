                        <div class="card-body text-center">
                            <h4 class="card-title">Total Vehicles Registered</h4>
                            <h3>20</h3>
                        </div>
                    </div>

                    <div class="card w-25">
                        <div class="card-body text-center">
                            <h4 class="card-title">Total Deaths</h4>
                            <h3>1.2M</h3>
                        </div>
                    </div>
                </div>

                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">DL Number</th>
                            <th scope="col">Age</th>
                            <th scope="col">Gender</th>
                            <th scope="col">Race</th>
                            <th scope="col">Total Vehicles</th>
                            <th scope="col">Total Arrests</th>
                            <th scope="col" class="align-right"><a href="/civilian/new"><button type="button" class="btn btn-secondary"><i data-feather="user-plus"></i>Add Civilian</button></a></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="align-middle">
                            <td>Madison Bark Arituro</td>
